#!/bin/bash

countdown() {
  local duration=$1
  local interval=1  # Update interval in seconds

  for ((i = duration; i >= 0; i -= interval)); do
    printf "okay"
    printf "\rCountdown: %02d seconds" "$i"
    sleep $interval
  done

  printf "\nTime's up!\n"
}

# Set the countdown duration (e.g., 10 seconds)
countdown_duration=11

# Call the countdown function with the duration
countdown $countdown_duration
